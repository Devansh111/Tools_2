<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:clickable="true">

    <include
        android:id="@+id/tools_owned_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tools_owned_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/tools_owned_include"
        app:tabIndicatorColor="#11B006"
        app:tabTextColor="#70796F"
        app:tabSelectedTextColor="#11B006"
        app:tabGravity="fill"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/tools_owned_tab_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tools_owned_tab"
        />

</RelativeLayout>