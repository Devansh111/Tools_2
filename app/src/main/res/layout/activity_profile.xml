<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.devansh.tools.Activities.profile"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include
            android:id="@+id/profile_include"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/toolbar"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_below="@+id/profile_include"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sample_dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/profile_name"
            android:layout_below="@+id/profile_include"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:text="Stewie Griffin"/>
        <TextView
            android:id="@+id/profile_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_name"
            android:layout_toRightOf="@+id/profile_image"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="22- good renter"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="3dp"/>
        <RatingBar
            android:id="@+id/profile_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_grade"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginLeft="40dp"
            android:isIndicator="true"
            android:numStars="5"
            android:layout_marginTop="3dp"
            android:theme="@style/RatingBar"
            android:stepSize="1"
            style="?android:attr/ratingBarStyleSmall"
            />
        <TextView
            android:id="@+id/profile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_rating"
            android:layout_below="@+id/profile_grade"
            android:text="(201)"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"/>

        <View
            android:id="@+id/profile_view_1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/profile_rating"
            android:background="@color/colorLightGrey"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <TextView
            android:id="@+id/profile_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_view_1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="Reviews"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/profile_reviews_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/profile_view_1"
            android:src="@drawable/star"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"/>

        <View
            android:id="@+id/profile_view_2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/profile_reviews"
            android:background="@color/colorLightGrey"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <TextView
            android:id="@+id/profile_rental_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_view_2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="Rental History"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/profile_rental_history_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/profile_view_2"
            android:src="@drawable/invoice"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"/>
        <View
            android:id="@+id/profile_view_3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/profile_rental_history"
            android:background="@color/colorLightGrey"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <TextView
            android:id="@+id/profile_payments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_view_3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="Payments"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/profile_payments_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/profile_view_3"
            android:src="@drawable/money"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"/>
        <View
            android:id="@+id/profile_view_4"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/profile_payments"
            android:background="@color/colorLightGrey"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <TextView
            android:id="@+id/profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_view_4"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="Settings"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/profile_settings_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/profile_view_4"
            android:src="@drawable/settings"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"/>
        <View
            android:id="@+id/profile_view_5"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/profile_settings"
            android:background="@color/colorLightGrey"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <TextView
            android:id="@+id/profile_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_view_5"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="Invite Friends"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/profile_friends_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/profile_view_5"
            android:src="@drawable/add_user"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"/>
        <View
            android:id="@+id/profile_view_6"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/profile_friends"
            android:background="@color/colorLightGrey"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <TextView
            android:id="@+id/profile_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_view_6"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="Logout"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/profile_logout_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/profile_view_6"
            android:src="@drawable/logout"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"/>
        <View
            android:id="@+id/profile_view_7"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/profile_logout"
            android:background="@color/colorLightGrey"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
