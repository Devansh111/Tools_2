<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:clickable="true">

        <include
            android:id="@+id/toolbox_add_tool_include"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/toolbox_add_tool_step_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/toolbox_add_tool_include"
            android:text="1. Upload a photo of your rental equipment"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/toolbox_add_tool_image_upload"
            android:layout_width="match_parent"
            android:layout_height="220sp"
            android:layout_below="@+id/toolbox_add_tool_step_1"
            android:layout_margin="15dp"
            android:background="#F7F6F6"
            android:scaleType="center"
            android:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/toolbox_add_tool_image_upload_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbox_add_tool_image_upload"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="Add  photo"
            android:textColor="@color/colorBlack"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/toolbox_add_tool_image_upload_2"
            android:layout_width="match_parent"
            android:layout_height="220sp"
            android:layout_below="@+id/toolbox_add_tool_image_upload_text"
            android:layout_margin="15dp"
            android:background="#F7F6F6"
            android:scaleType="center"
            android:src="@drawable/ic_menu_camera"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/toolbox_add_tool_image_upload_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbox_add_tool_image_upload_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:text="Add another photo"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/toolbox_add_tool_next"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorTab"
            android:text="Next"
            android:textStyle="bold"
            android:textColor="@color/colorBackground"
            android:enabled="false"
            android:alpha=".2"
            />

    </RelativeLayout>
</ScrollView>